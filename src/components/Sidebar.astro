---
// 1. Obtenemos la ruta actual (ej: "/dashboard" o "/account")
const currentPath = Astro.url.pathname;

// 2. Definimos los items del menú en una lista para no repetir código HTML
const navItems = [
    { name: 'Inicio', href: '/dashboard' },
    { name: 'Cuenta', href: '/account' },
    { name: 'Transacciones', href: '/transactions' },
    { name: 'Depositar', href: '/deposit' },
    { name: 'Mis Tarjetas', href: '/cards' },
    { name: 'Pago de Servicios', href: '/services-payment' },
];
---

<aside class="sidebar">
    <div class="sidebar__logo">
        <h2>AcaBank</h2>
    </div>
    <nav class="sidebar__nav">
        <ul class="sidebar__list">
            
            {navItems.map((item) => (
                <li>
                    <a 
                        href={item.href} 
                        class:list={[
                            "sidebar__link", 
                            { "sidebar__link--active": currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }
                        ]}
                    >
                        {item.name}
                    </a>
                </li>
            ))}

        </ul>
    </nav>
    <div class="sidebar__footer">
        <a href="#" class="sidebar__link sidebar__link--logout">Cerrar Sesión</a>
    </div>
</aside>

<style>
    /* ... Tus estilos CSS se mantienen exactamente igual ... */
    :root {
        --font-family: 'Inter', sans-serif;
        --bg-body: #F3F4F6;
        --color-text-dark: #111827;
        --color-text-gray: #6B7280;
        --color-primary: #7A7EFF;
        --sidebar-width: 280px; 
    }

    /* Pega aquí el resto de tu CSS original */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    .sidebar {
        width: var(--sidebar-width);
        background-color: #FFFFFF;
        border-right: 1px solid rgba(0,0,0,0.05);
        padding: 2rem;
        display: flex;
        flex-direction: column;
        position: sticky;
        top: 0;
        height: 100vh; 
        flex-shrink: 0; 
    }

    .sidebar__logo {
        margin-bottom: 3rem;
        color: var(--color-primary);
        font-weight: 800;
        font-size: 1.5rem; /* Asegura un tamaño visible */
    }

    .sidebar__list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .sidebar__link {
        text-decoration: none;
        display: block;
        padding: 1rem 1.2rem;
        border-radius: 12px;
        color: var(--color-text-gray);
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .sidebar__link:not(.sidebar__link--active):hover {
        background-color: #F3F4F6;
        color: var(--color-text-dark);
    }

    /* Esta es la clase que se activará automáticamente */
    .sidebar__link--active {
        background-color: var(--color-primary);
        color: #FFFFFF !important;
        box-shadow: 0 4px 10px rgba(122, 126, 255, 0.3);
    }

    .sidebar__footer {
        margin-top: auto; 
        border-top: 1px solid #F3F4F6;
        padding-top: 1rem;
    }

    .sidebar__link--logout {
        color: #EF4444;
    }
    .sidebar__link--logout:hover {
        background-color: #FEF2F2;
        color: #DC2626;
    }
</style>